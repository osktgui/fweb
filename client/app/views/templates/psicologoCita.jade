include ./mixins/mixins-form.jade
include ./includes/header-int.jade

.body-container-filium.with-left-menu(ng-init="formularioActivo='CalendarioCitas'")
	include ./includes/left-menu.jade
	.formularioActivo(ng-show="formularioActivo=='CalendarioCitas'")
		.form-filium-container 
			div(ui-calendar="uiConfig.calendar",ng-model="eventSources")
#myModal.modal.fade(role="dialog")
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type="button",data-dismiss="modal") &times;
				h4.modal-title Disponibilidad - {{tituloPopup}}
			.modal-body
				form("Disponibilidad","disponibilidadForm")
					.col-lg-6
						+controlFilium-select-empty("Desde","horaInicio","horaInicio","{ selectActive: selectChangehoraInicio ,success: submittedDisponibilidad && disponibilidadForm.horaInicio.$valid, error: submittedDisponibilidad && disponibilidadForm.horaInicio.$invalid}","submittedDisponibilidad && disponibilidadForm.horaInicio.$invalid")(ng-options="hora.text for hora in horas track by hora.id",required)
					.col-lg-6
						+controlFilium-select-empty("Hasta","horaFin","horaFin","{ selectActive: selectChangehoraFin ,success: submittedDisponibilidad && disponibilidadForm.horaFin.$valid, error: submittedDisponibilidad && disponibilidadForm.horaFin.$invalid}","submittedDisponibilidad && disponibilidadForm.horaFin.$invalid")(ng-options="hora.text for hora in horas track by hora.id",required)
					a.fbtn.fbtn-primary(href="javascript:void(0)",ng-click="submittedDisponibilidad=true;agregando(horaInicio,horaFin);") Agregar
				.row
					.col-lg-12
						.panel.panel-default
							.table-responsive
								table#table-ext-1.table.table-bordered.table-hover
									thead
										tr
											th.text-center #
											th.text-center Hora Inicio
											th.text-center Hora Fin
											th(check-all)
												.checkbox.c-checkbox(data-toggle="tooltip",data-title="Check All")
													label
														input(type='checkbox', checked="true")
														span.fa.fa-check
									tbody
										tr(ng-repeat="horario in horariosDisponibles track by horario.id")
											td {{ $index+1 }}
											td {{ horario.hIni }}
											td {{ horario.hFin }}
											td
												.checkbox.c-checkbox
													label
														input(type='checkbox', checked="true")
														span.fa.fa-check
			.modal-footer
				a.fbtn.fbtn-primary.cancel(data-dismiss="modal") Close